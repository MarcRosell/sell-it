header
  nav.navbar.navbar-expand-md.navbar-light
    .container-nav
      button#menu-toggle.menu-btn.navbar-toggler.d-lg-none(type='button', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span
          i.fa.fa-bars(aria-hidden='true')
      a.navbar-brand(href='/')
        .logo
          h1(class={"white": idSection === 'home'})
            | Sell it 
            span.market-logo
              h1 MARKET
      .div
        button.filter-btn#filterBtn(class={"hide": idSection !== 'products'})
          span
            i.fa.fa-filter(aria-hidden='true')
    .nav-desktop.collapse.navbar-collapse
      ul.navbar-nav.mr-auto.nav-items
        li.nav-item
          a.nav-link(href='/', class={"white": idSection === 'home'})
            | Home 
        li.nav-item
          a.nav-link(href='/products',class={"white": idSection === 'home'}, class={"hide": idSection === 'home'} )
            | Buy
        li.nav-item
          a.nav-link(href='/add-product',class={"white": idSection === 'home'} ,  class={"hide": idSection === 'home'})
            | Sell 
      if (!user)
        p
          a(href=`/login`,class={"white": idSection === 'home'}) Login
      .btn-group
        .profile-nav-bar
          .profile-photo-navbar
            img(src='http://via.placeholder.com/30x30')
        button#dropdownBtn.dropdown-toggle.dropdown-toggle-split(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          span.sr-only Toggle Dropdown
        if (user)
          .dropdown-menu
            a.dropdown-item(href=`/profile/${user._id}`) My account
            a.dropdown-item(href='/logout') Exit
  #wrapper
    #sidebar-wrapper
      ul.sidebar-nav
       if (user)
        li
          .profile-side-bar
            .profile-photo
              img(src='http://via.placeholder.com/50x50')
            .action-profile
              p
                a(href=`/profile/${user._id}`) My account
        li
          a(href=`/edit-profile/${user._id}`) Edit Account
        li
          a(href='/products') Buy
        li
          a(href=`/add-product/${user._id}`) Sell
        li
          a(href='/logout') Exit
       else
        li
          .profile-side-bar
            .profile-photo
              img(src='http://via.placeholder.com/50x50')
            .action-profile
              p
                a(href=`/login`) Login
        li
          a(href='/products') Buy

        


