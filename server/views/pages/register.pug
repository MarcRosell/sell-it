extends ../layout

block content
    .container
      h3 Register
      .card-form
        form#register-form.form-signin()
          p Register for free account
          input#inputEmail.form-control(type='email', required, name="email", placeholder="email")
          input#inputPassword.form-control(type='password', placeholder='password', required, name="password")
          button.btn.btn-lg.btn-success.btn-block.btn-signin.custom-btn() Sign Up
        p Have you already an account?
          a(href='/login') Login